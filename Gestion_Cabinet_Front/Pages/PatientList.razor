@page "/PatientList"
@inherits PatientListBase


<h3 class="text-center">PatientList</h3>

<div class="card-deck">
    @foreach (var patient in Patients )
    {
        <div class="card m-3" style="min-width :18rem ; max-width:30.5% ;">
            <div class="card-header">
                <h3 class="text-center">@patient.prenom @patient.nom</h3>
            </div>

            <img  class="card-img-top imageThumbnail" src="@patient.photo"/>

            <div class="card-footer text-center">
                <a href="@($"PatientDetails/{patient.id}")" class="btn btn-primary m-1">View</a>
                <a href="@($"EditPatient/{patient.id}")"class="btn btn-primary m-1">Edit</a>
                <a href="@($"DeletePatient/{patient.id}")" class="btn btn-danger m-1">Delete</a>

                

            </div>

        </div>
    }

</div>


