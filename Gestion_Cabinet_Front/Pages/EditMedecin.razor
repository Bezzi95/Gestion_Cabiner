@using Model
@page "/EditMedecin/{id}"
@inherits EditMedecinBase

<EditForm Model="@Medcine" OnValidSubmit="HandleValidSubmit">
    <h3 class="text-center">CreateMedecin </h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">

        <label for="prenom" class="col-sm-2 col-form-label">
            Prenom
        </label>

        <div class="col-sm-10">
            <InputText id="prenom" class="form-control" placeholder="Prenom" @bind-Value="Medcine.prenom" />
            <ValidationMessage For="@(() => Medcine.prenom)" />
        </div>

    </div>

    <div class="form-group row">

        <label for="nom" class="col-sm-2 col-form-label">
            Nom
        </label>

        <div class="col-sm-10">
            <InputText id="nom" class="form-control" placeholder="Nom" @bind-Value="Medcine.nom" />
            <ValidationMessage For="@(() => Medcine.nom)" />
        </div>

    </div>


    <div class="form-group row">

        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>

        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="Medcine.Email" />
            <ValidationMessage For="@(() => Medcine.Email)" />
        </div>

    </div>

    <div class="form-group row">

        <label for="adresse" class="col-sm-2 col-form-label">
            Adresse
        </label>

        <div class="col-sm-10">
            <InputText id="adresse" class="form-control" placeholder="Adresse" @bind-Value="Medcine.Adresse" />
            <ValidationMessage For="@(() => Medcine.Adresse)" />
        </div>

    </div>


    <div class="form-group row">

        <label for="telephone" class="col-sm-2 col-form-label">
            Telephone
        </label>

        <div class="col-sm-10">
            <InputText id="telephone" class="form-control" placeholder="Telephone" @bind-Value="Medcine.Telephone" />
            <ValidationMessage For="@(() => Medcine.Telephone)" />
        </div>

    </div>


    <div class="form-group row">

        <label for="sexe" class="col-sm-2 col-form-label">
            Sexe
        </label>

        <div class="col-sm-10">
            <InputSelect id="sexe" class="form-control" @bind-Value="Sexeid">
                @foreach (var se in Sexes)
                {
                    <option value="@se.id">@se.nom </option>
                }
            </InputSelect>
        </div>

    </div>

    <div class="form-group row">

        <label for="specialite" class="col-sm-2 col-form-label">
            Specialite
        </label>

        <div class="col-sm-10">
            <InputSelect id="specialite" class="form-control" @bind-Value="Specialiteid">
                @foreach (var sp in Specialites)
                {
                    <option value="@sp.id">@sp.nom </option>
                }
            </InputSelect>
        </div>

    </div>


    <!--<div class="form-group row">

            <label for="ville" class="col-sm-2 col-form-label">
                Ville
            </label>

            <div class="col-sm-10">
                <InputSelect id="ville" class="form-control" @bind-Value="Villeid">
                   @foreach (var vi in Villes)
                    {
                        <option value="@vi.id">@vi.nom </option>
                    }
                </InputSelect>
            </div>

        </div>

    -->


    <button class="btn btn-primary" type="submit">Submit</button>
    <button class="btn btn-danger" type="button" @onclick="Delete_Click">Delete</button>

</EditForm>



