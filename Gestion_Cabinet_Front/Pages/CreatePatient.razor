@page "/CreatePatient"
@inherits CreatePatientBase

<EditForm Model="@Patient" onValidSubmit="HandleValidSubmit">
    <h3 class="text-center">CreatePatient</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">

        <label for="prenom" class="col-sm-2 col-form-label">
            Prenom
        </label>

        <div class="col-sm-10">
            <InputText id="prenom" class="form-control" placeholder="Prenom" @bind-Value="Patient.prenom" />
            <ValidationMessage For="@(() => Patient.prenom)" />
        </div>

    </div>

    <div class="form-group row">

        <label for="nom" class="col-sm-2 col-form-label">
            Nom
        </label>

        <div class="col-sm-10">
            <InputText id="nom" class="form-control" placeholder="Nom" @bind-Value="Patient.nom" />
            <ValidationMessage For="@(() => Patient.nom)" />
        </div>

    </div>


    <div class="form-group row">

        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>

        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="Patient.Email" />
            <ValidationMessage For="@(() => Patient.Email)" />
        </div>

    </div>

    <div class="form-group row">

        <label for="adresse" class="col-sm-2 col-form-label">
            Adresse
        </label>

        <div class="col-sm-10">
            <InputText id="adresse" class="form-control" placeholder="Adresse" @bind-Value="Patient.Adresse" />
            <ValidationMessage For="@(() => Patient.Adresse)" />
        </div>

    </div>


    <div class="form-group row">

        <label for="telephone" class="col-sm-2 col-form-label">
            Telephone
        </label>

        <div class="col-sm-10">
            <InputText id="telephone" class="form-control" placeholder="Telephone" @bind-Value="Patient.Telephone" />
            <ValidationMessage For="@(() => Patient.Telephone)" />
        </div>

    </div>

    <div class="form-group row">

        <label for="Date_naiss" class="col-sm-2 col-form-label">
            Date Naiss
        </label>

        <div class="col-sm-10">
            <InputDate  class="form-control"  @bind-Value="Patient.Date_naiss" />
        </div>

    </div>

    <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>



